                    $( "#dialog-delete:ui-dialog" ).dialog( "destroy" );
                    var id = $(this).closest('tr').find('td.buyer-id').text();
                    $( "#dialog-delete" ).dialog({
                        resizable: false,
                        draggable: false,
                        height: 140,
                        modal: true,
                        buttons: {
                            "Delete this client": function() {
                                $.post(
                                    '<?php echo $this->websiteUrl;?>plugin/buyerarea?run=remclient',
                                    {id: id},
                                    function(responce){
