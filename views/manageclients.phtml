                        function(responce){
                            if (responce.length) {
                                $( "#dialog-usercarts").html(responce)
                                    .dialog({modal:true, resizable: false, width: 500, height: 410})
                                    .find('table#usercarts')
                                    .dataTable({
                                        "bJQueryUI": true,
                                        "bAutoWidth": false,
                                        "bPaginate": false,
                                        "sScrollY": "300",
                                        "aoColumnDefs": [{ "bSortable": false, "aTargets": [ -1 ]}]
                                    });
                            }
                        },
                        'html'
                    );
                });
                
                $('.button-quote').button({icons: {primary: "ui-icon-document"}}).click(function(){
                    $( "#dialog-userquotes:ui-dialog" ).dialog( "destroy" );
                    var id = $(this).closest('tr').find('td.buyer-id').text();
